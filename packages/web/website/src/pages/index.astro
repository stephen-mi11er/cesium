---
import Layout from '../layouts/Layout.astro';
import CesiumMap from "../components/CesiumMap.astro";
const title = "Cesium Demo"
---

<Layout title={title} >
	<main>
		<h1 style="text-align: center; margin-bottom: 15px">{title}</h1>
		<CesiumMap/>
	</main>
</Layout>


<style>
	main {
		margin: auto;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1;
	}
</style>
